@model IEnumerable<Servicio.DTO.DTO_Solicitud>
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Solicitud de Servicios para el Empleado</h3>
    </div>
    <div class="modal-body">
        @foreach (var p in Model)
        {
            if (p.wifi == true)
            {
                <label><i class="ti-check"></i> WiFi</label>
            }
            if (p.home_grupal == true)
            {
                <br />
                <label><i class="ti-check"></i> Home Grupal</label>
                if (p.escritura_home == true)
                {
                    <br />
                    <label><i class=" ti-control-record"></i> Escritura en Home</label>
                }
                else
                {
                    <label><i class=" ti-control-record"></i> Lectura en Home</label>
                }
            }
            if (p.home_personal == true)
            {
                <br />
                <label><i class="ti-check"></i> Home Personal</label>
            }
            if (p.internet == true)
            {
                <br />
                <label><i class="ti-check"></i> Internet</label>
            }
            if (p.laboratorio == true)
            {
                <br />
                <label><i class="ti-check"></i> Laboratorio</label>
            }
            if (p.rayos == true)
            {
                <br />
                <label><i class="ti-check"></i> Rayos X</label>
            }
            if (p.impresora == true)
            {
                <br />
                <label><i class="ti-check"></i> Impresora</label>
            }
            if (p.acceso_remoto == true)
            {
                <br />
                <label><i class="ti-check"></i> Acceso Remoto</label>
            }
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        location.reload();
    });
</script>